<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_record_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableLayout
        android:id="@+id/add_record_frag_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/add_record_button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_record_frag_container"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/add_record_frag_container"
        android:layout_marginBottom="20dp"
        android:text="@string/add_record_button_save" />

</RelativeLayout>